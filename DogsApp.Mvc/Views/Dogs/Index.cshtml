@model DogsApp.Mvc.Models.Dog[]
@using DogsApp.Mvc.Models

<!DOCTYPE html>
<html>
<head>
    <title>DogsLista</title>
</head>
<body>
    <ul>
        @foreach (Dog dog in Model)
        {
            <li>@dog.Name 
                <a href="/edit/@dog.Id">Edit dog</a>
                <form action="" method="post">
                    <input name="id" value=@dog.Id type="hidden"/>
                    <button type="submit">Delete</button>
                </form>
            </li>
        }
            
    </ul>
    <a href="/create">Add dog</a>
    </body>
    </html>